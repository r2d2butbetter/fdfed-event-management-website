      <div class="search-container">
      <form method="GET" action="/">
        <div class="search-box">
          <input
            class="input"
            name="title"
            placeholder="Search by event title"
            value="<%= titleQuery || '' %>"
            type="text"
          />
          <span class="input-border"></span>
        </div>
    
        <div class="search-box">
          <input
            class="input"
            name="venue"
            placeholder="Search by venue"
            value="<%= venueQuery || '' %>"
            type="text"
          />
          <span class="input-border"></span>
        </div>
        
        <div class="search-box">
          <select class="input" name="category">
            <option value="">All Categories</option>
            <option value="Concerts" <%= categoryQuery === 'Concerts' ? 'selected' : '' %>>Concerts</option>
            <option value="Exhibitions" <%= categoryQuery === 'Exhibitions' ? 'selected' : '' %>>Exhibitions</option>
            <option value="TEDx" <%= categoryQuery === 'TEDx' ? 'selected' : '' %>>TEDx</option>
            <option value="Health Camps" <%= categoryQuery === 'Health Camps' ? 'selected' : '' %>>Health Camps</option>
          </select>
          <span class="input-border"></span>        </div>
      </form>
