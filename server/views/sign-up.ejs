<div class="form-container">
  <form method="POST" action="/sign-up" class="full-width-form">

    <h1 style="text-align: center;">Sign-up</h1>

    <div class="form-group">
      <label for="email">Email Address</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" />
    </div>
    <div class="form-group">
      <label for="name">name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" />
    </div>
    <div class="form-group">
      <label for="password1">Password</label>
      <input type="password" class="form-control" id="password" name="password1" placeholder="Enter password" />
    </div>
    <div class="form-group">
      <label for="password2">Re-enter Password</label>
      <input type="password" class="form-control" id="confirmPassword" name="password2"
        placeholder="Confirm password" />

    </div>
    <br />
    <button type="submit" class="submit-btn form-submit-btn">Submit</button>
  </form>
</div>

<script src="/js/validation-utils.js"></script>
<script src="/js/signup-validation.js"></script>